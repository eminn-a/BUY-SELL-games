
    <main id="details">
        <section id="details-info">
            <div class="game-image">
                <img src={{element.image}}>
            </div>

            <div class="game-info">
                <div class="game-text">
                    <h1 id="name">{{element.name}}</h1>
                    <h3 id="platform">Platform: {{element.platform}}</h3>
                    <p id="price"><span>Price: ${{element.price}}</span></p>
                    <p id="genre"><span>Genre: {{element.genre}}</span></p>
                    <p id="description"> {{element.description}}</p>
                </div>
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isAuthenticated}}
                    {{#if isOwner}}
                    <div class="author">
                        <a href="/element/{{element._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/element/{{element._id}}/delete" onclick="alert('Are you sure you want to delete this item?')" class="btn-delete">Delete</a>
                    </div>
                    {{/if}}
                    {{/if}}
                    <!-- Logged in user who has not yet buy this game code-->
                    <!-- <a href="#" class="btn-buy">Buy</a> -->

                    <!-- Logged in user who has already buy this game code-->
                    <!-- <p class="buy-message">You have already bought this game</p> -->
                </div>
            </div>
        </section>
    </main>
