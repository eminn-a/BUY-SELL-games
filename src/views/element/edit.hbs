<main id="edit">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form action="#" method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    {{#each option}}
                    <option value="{{key}}" {{#if selected}}Selected{{/if}}>{{label}}</option>
                    {{/each}}
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value='{{elementData.name}}'>
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{elementData.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{elementData.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{elementData.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{elementData.description}}</textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>